# WhatsApp Service Configuration
# Copy this file to .env and fill in the values

# Port for the Express server
PORT=3001

# API Secret Key (used to authenticate requests from frontend)
# Generate a random string: openssl rand -hex 32
API_SECRET_KEY=your-secret-key-here

# Firebase Configuration (for RemoteAuth and message storage)
FIREBASE_PROJECT_ID=eastern-crm-c57d9
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@eastern-crm-c57d9.iam.gserviceaccount.com

# WhatsApp Session ID (unique identifier for this WhatsApp client)
WHATSAPP_SESSION_ID=eastern-mills-production

# Frontend URL (for CORS)
FRONTEND_URL=https://eastern-mills-crm.netlify.app

# Environment (development or production)
NODE_ENV=production

# Webhook URL (where incoming WhatsApp messages will be forwarded to Cloud Function)
WEBHOOK_URL=https://us-central1-eastern-crm-c57d9.cloudfunctions.net/parseWhatsAppReply
